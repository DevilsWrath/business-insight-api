{
  "info": {
    "name": "Business Insight API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('token', json.accessToken);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Insight",
      "item": [
        {
          "name": "List Data Sources",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/insight/data-sources?orgId={{orgId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "insight",
                "data-sources"
              ],
              "query": [
                {
                  "key": "orgId",
                  "value": "{{orgId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Execute Query Template",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/insight/query-execution/execute?orgId={{orgId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "insight",
                "query-execution",
                "execute"
              ],
              "query": [
                {
                  "key": "orgId",
                  "value": "{{orgId}}"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"queryTemplateId\": 1,\n  \"params\": {},\n  \"snapshot\": false\n}"
            }
          }
        }
      ]
    },
    {
      "name": "RBAC Admin",
      "item": [
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{adminUsername}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('token', json.accessToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "List Permissions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/rbac/permissions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "rbac",
                "permissions"
              ]
            }
          }
        },
        {
          "name": "Create Role ANALYST",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/rbac/roles",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "rbac",
                "roles"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ANALYST\",\n  \"description\": \"Read-only analyst role\"\n}"
            }
          }
        },
        {
          "name": "Set Role Permissions",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/rbac/roles/{{roleId}}/permissions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "rbac",
                "roles",
                "{{roleId}}",
                "permissions"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"permissionCodes\": [\n    \"INSIGHT_DS_READ\",\n    \"INSIGHT_QT_READ\"\n  ]\n}"
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/rbac/users?query={{userQuery}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "rbac",
                "users"
              ],
              "query": [
                {
                  "key": "query",
                  "value": "{{userQuery}}"
                }
              ]
            }
          }
        },
        {
          "name": "Assign Role To User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/rbac/users/{{userId}}/roles",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "rbac",
                "users",
                "{{userId}}",
                "roles"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roleNames\": [\"ANALYST\"]\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "orgId",
      "value": "1"
    },
    {
      "key": "username",
      "value": "admin"
    },
    {
      "key": "password",
      "value": "ChangeMe_DevOnly_123456!"
    },
    {
      "key": "adminUsername",
      "value": "admin"
    },
    {
      "key": "adminPassword",
      "value": "ChangeMe_DevOnly_123456!"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "roleId",
      "value": "1"
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "userQuery",
      "value": "admin"
    }
  ]
}
