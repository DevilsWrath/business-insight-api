{
  "info": {
    "name": "Business Insight API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('token', json.accessToken);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Insight",
      "item": [
        {
          "name": "List Data Sources",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/insight/data-sources?orgId={{orgId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "insight",
                "data-sources"
              ],
              "query": [
                {
                  "key": "orgId",
                  "value": "{{orgId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Execute Query Template",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/insight/query-execution/execute?orgId={{orgId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "insight",
                "query-execution",
                "execute"
              ],
              "query": [
                {
                  "key": "orgId",
                  "value": "{{orgId}}"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"queryTemplateId\": 1,\n  \"params\": {},\n  \"snapshot\": false\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "orgId",
      "value": "1"
    },
    {
      "key": "username",
      "value": "admin"
    },
    {
      "key": "password",
      "value": "ChangeMe_DevOnly_123456!"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
